  .wheel-container {
    display: flex;
    flex-wrap: wrap;
    width: 300px;
    margin-bottom: 20px;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 0 15px rgba(0,0,0,0.3);
  }

  .slice {
    width: 50%;
    height: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    font-weight: bold;
    cursor: pointer;
    transition: transform 0.3s;
  }

  .highlight {
    transform: scale(1.3);
    border: 2px solid #fff;
  }

  .spin-btn, .popup button, .back-btn {
    padding: 10px 20px;
    margin: 10px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
  }

  .spin-btn { background: #ff5722; color: white; font-size: 16px; }
  .spin-btn:hover { background: #e64a19; }

  .popup {
    position: fixed;
    top:0; left:0;
    width:100%; height:100%;
    background: rgba(0,0,0,0.7);
    display:flex;
    justify-content:center;
    align-items:center;
    visibility:hidden;
  }

  .popup-content {
    background:white;
